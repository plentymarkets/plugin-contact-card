{% set name =           config("plenty.system.company.name") %}
{% set ceo =            config("plenty.system.company.ceo") %}
{% set city =           config("plenty.system.company.city") %}
{% set country =        config("plenty.system.company.country") %}
{% set email =          config("plenty.system.company.email") %}
{% set fax =            config("plenty.system.company.fax") %}
{% set fon =            config("plenty.system.company.fon") %}
{% set hotline =        config("plenty.system.company.hotline") %}
{% set street =         config("plenty.system.company.street") %}
{% set vat =            config("plenty.system.company.vatNumber") %}
{% set zip =            config("plenty.system.company.zip") %}
{% set timezone =       config("plenty.system.company.timezone") %}

{% set openingTimes =   config("ContactCard.contact.opening_times") %}
{% set showData =       config("ContactCard.contact.show_data") %}

{% if showData == "all" %}
    {% set showData =
        [
            "name",
            "ceo",
            "city",
            "country",
            "email",
            "fax",
            "fon",
            "hotline",
            "street",
            "vatNumber",
            "zip",
            "timezone",
            "opening_times",
        ]
    %}
{% else %}
    {% set showData = showData|split(', ') %}
{% endif %}

<h5>{{ trans("ContactCard::Contact.Contact") }}</h5>

<style>
    .contact-card > p > .fa {
        vertical-align: top;
        line-height: 1.5
    }
</style>

<div class="contact-card">
    <p>
        <i class="fa fa-fw fa-map-marker" aria-hidden="true"></i>
        <span class="d-inline-block">
            {% if "name" in showData %}
                {{ name }}
            {% endif %}
            {% if "ceo" in showData %}
                <br> {{ ceo }}
            {% endif %}
            {% if "street" in showData %}
                <br> {{ street }}
            {% endif %}
            {% if "zip" in showData %}<br> {{ zip }}{% endif %} {% if "city" in showData %}{{ city }}{% endif %}
            {% if "country" in showData %}
                <br> {{ country }}
            {% endif %}
        </span>
    </p>

    {% if "fon" in showData %}
        <p class="m-y-0">
            <i class="fa fa-fw fa-phone" aria-hidden="true"></i>
            <span class="d-inline-block">{{ fon }}</span>
        </p>
    {% endif %}

    {% if "hotline" in showData %}
        <p class="m-y-0">
            <i class="fa fa-fw fa-phone" aria-hidden="true"></i>
            <span class="d-inline-block">{{ hotline }}</span>
        </p>
    {% endif %}

    {% if "fax" in showData %}
        <p class="m-y-0">
            <i class="fa fa-fw fa-fax" aria-hidden="true"></i>
            <span class="d-inline-block">{{ fax }}</span>
        </p>
    {% endif %}

    {% if "email" in showData %}
        <p class="m-y-0">
            <i class="fa fa-envelope fa-fw" aria-hidden="true"></i>
            <span class="d-inline-block">{{ email }}</span>
        </p>
    {% endif %}

    {% if "opening_times" in showData %}
        <p class="m-y-0">
            <i class="fa fa-fw fa-clock-o" aria-hidden="true"></i>
            <span class="d-inline-block">{{ openingTimes }}</span>
        </p>
    {% endif %}

    {% if "timezone" in showData %}
        <p class="m-y-0">
            <i class="fa fa-fw fa-globe" aria-hidden="true"></i>
            <span class="d-inline-block">{{ timezone }}</span>
        </p>
    {% endif %}

    {% if "vatNumber" in showData %}
        <p class="m-y-0">
            <i class="fa fa-fw" aria-hidden="true"></i>
            <span class="d-inline-block">VAT: {{ vat }}</span>
        </p>
    {% endif %}
</div>